<h1>New post</h1>

<%= form_for @post, url: profile_posts_path do |form| %>
  <% if @post.errors.any? %>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form.label :text %>
  <%= form.text_field :text %>

  <%= form.submit %>
<% end %>
